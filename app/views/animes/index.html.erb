<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h2> Anime List </h2>
      <%= paginate @animes %>
      <div class="row>">
        <% @animes.each do |anime| %>
          <div class="col-sm-6 col-md-4">
            <div class="thumbnail thumbnail-index">
              <%= image_tag(anime.image, size: "300x300") %>
              <div class="caption">
                <h4><%= anime.title %></h4>
                <p><%= anime.information %></p>
                <p><a><%= link_to 'Show More', anime_path(anime), class: "btn btn-show-anime" %></a> <%= link_to '<i class="glyphicon glyphicon-star"></i> Add to Favorites'.html_safe ,
                                                                                                                 favorite_animes_path(anime), class: "btn btn-fav-anime",
                                                                                                                 method: :post, data: {confirm: "Are you sure?"}%></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>