<div class="container">
  <div class="row">
    <h2> Create Anime </h2>
    <%= render 'shared/errors', resource: @anime %>
    <div class="col-md-8 col-md-offset-2">
      <%= form_for @anime, url: animes_path(@anime), method: :post, html: {class: "form-horizontal form-genre", role: "form"} do |f| %>
        <div class="form-group">
          <%= f.label :title, class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control", placeholder: "Type name of genre..." %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :information, class: "control-label col-sm-2" %>
          <div class="col-sm-10">
            <%= f.text_area :information, class: "form-control", rows: 5, placeholder: "Content... " %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :Genres , class: "control-label col-sm-2"%>
          <div class ="col-sm-10">
            <div class="row">
              <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :genre_name do |checkbox| %>
                <% checkbox.label(class: "checkbox-inline input_checkbox") { checkbox.check_box(class: "checkbox") + checkbox.text } %>
              <% end %>
            </div>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :Thumbnail, class: "control-label col-sm-2"%>
          <div class ="col-sm-10">
            <%= f.file_field :image, class: "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class: "btn btn-create pull-right" %>
            <%= link_to "Back", root_path , class: "btn btn-default"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>