<div class="container">
  <div class="row">
    <h2 class="anime-header"> Anime </h2>
    <div class="anime">
      <div class="col-md-5 col-md-4">
        <div class="thumbnail">
          <%= image_tag @anime.image %>
        </div>
      </div>
      <div class="anime-info">
        <p class="anime-title"> <%= @anime.title %> </p>
        <p class="anime-summary"><strong>Summary:</strong> <%= @anime.information %></p>
      </div>
    </div>
  </div>
</div>