<div class="container">
  <div class="row">
    <h2> Insert a new character | Anime: <%= @anime.title %></h2>
    <%= render 'shared/errors', resource: @character %>
    <div class="col-md-10 col-md-offset-1">
      <%= form_for @character, url: anime_characters_path(@anime, @anime.characters.build), html: {class: "form-horizontal", role: "form"}, method: :post do |f| %>
        <div class="form-group">
          <%= f.label :Character_Name, class: "control-label col-sm-3" %>
          <div class="col-sm-9">
            <%= f.text_field :character_name, class: "form-control", placeholder: "character name..." %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :Character_Description, class: "control-label col-sm-3" %>
          <div class="col-sm-9">
            <%= f.text_area :character_description, rows: 5 ,class: "form-control", placeholder: "character description..." %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :Appearance, class: "control-label col-sm-3" %>
          <div class="col-sm-9">
            <%= f.text_area :appearance, rows: 5 ,class: "form-control", placeholder: "appearance..." %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :Role, class: "control-label col-sm-3" %>
          <div class="col-sm-8">
            <%= f.select :role, options_for_select(["Main Character", "Antagonist", "Side Character"], selected: "") %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :Avatar, class: "control-label col-sm-3"%>
          <div class ="col-sm-9">
            <%= f.file_field :avatar, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :Image, class: "control-label col-sm-3"%>
          <div class ="col-sm-9">
            <%= f.file_field :image, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class: "btn btn-create pull-right" %>
            <%= link_to "Back", anime_path(@anime.id) , class: "btn btn-default"%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>